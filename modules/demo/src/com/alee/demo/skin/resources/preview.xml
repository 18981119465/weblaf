<skin>

    <!-- Toolbar text -->
    <style type="toolBar" id="tool" extends="attached" padding="4" />
    <style type="label" id="tool" margin="0,6,0,0" />
    <style type="toolBarSeparator" id="tool" margin="0,4,0,4" />

    <!-- Panel with all previews -->
    <style type="panel" id="previews">
        <component>
            <opaque>true</opaque>
            <background>white</background>
        </component>
        <painter id="painter" class="com.alee.painter.common.InnerShadePainter">
            <shadeWidth>12</shadeWidth>
            <round>0</round>
        </painter>
    </style>

    <!-- Single preview panel -->
    <style type="panel" id="preview">
        <component>
            <opaque>false</opaque>
            <background>white</background>
        </component>
        <painter class="com.alee.demo.skin.PreviewPainter">
            <undecorated>false</undecorated>
            <round>8</round>
            <shadeWidth>12</shadeWidth>
            <borderColor>white</borderColor>
            <disabledBorderColor>white</disabledBorderColor>
            <paintBackground>true</paintBackground>
            <webColoredBackground>false</webColoredBackground>
        </painter>

        <!-- Preview title label -->
        <style type="styledLabel" id="title" padding="15,25,15,15">
            <component>
                <horizontalAlignment>10</horizontalAlignment>
                <verticalAlignment>0</verticalAlignment>
            </component>
        </style>

        <!-- Preview title and content separator -->
        <style type="separator" id="separator" extends="vertical" margin="2,0,2,0" />

        <!-- Preview components container -->
        <style type="panel" id="content" extends="transparent" padding="15,15,15,15" />

    </style>
    <style type="panel" id="preview-light" extends="preview">
        <component>
            <background>white</background>
        </component>
        <painter class="com.alee.demo.skin.PreviewPainter">
            <borderColor>white</borderColor>
            <disabledBorderColor>white</disabledBorderColor>
        </painter>

        <!-- Preview title label -->
        <style type="styledLabel" id="title" padding="15,25,15,15">
            <component>
                <foreground>black</foreground>
            </component>
        </style>

    </style>
    <style type="panel" id="preview-dark" extends="preview">
        <component>
            <background>105,110,115</background>
        </component>
        <painter class="com.alee.demo.skin.PreviewPainter">
            <borderColor>105,110,115</borderColor>
            <disabledBorderColor>105,110,115</disabledBorderColor>
        </painter>

        <!-- Preview title label -->
        <style type="styledLabel" id="title" padding="15,25,15,15">
            <component>
                <foreground>235,235,235</foreground>
            </component>
        </style>

        <!-- Preview title and content separator -->
        <style type="separator" id="separator">
            <painter class="com.alee.managers.style.skin.web.WebSeparatorPainter">
                <lines>
                    <line>
                        <color>160,160,160</color>
                    </line>
                </lines>
            </painter>
        </style>

    </style>

    <!-- Skin selectors panel -->
    <style type="panel" id="skin-selectors">
        <painter class="com.alee.managers.style.skin.web.WebPanelPainter">
            <round>0</round>
            <shadeWidth>0</shadeWidth>
            <paintTop>false</paintTop>
            <paintLeft>false</paintLeft>
            <paintRight>false</paintRight>
        </painter>

        <!-- Skin selector button -->
        <style type="toggleButton" id="skin-selector">
            <painter class="com.alee.managers.style.skin.web.WebButtonPainter">
                <round>0</round>
                <shadeWidth>0</shadeWidth>
                <innerShadeWidth>4</innerShadeWidth>
            </painter>
        </style>

    </style>

</skin>