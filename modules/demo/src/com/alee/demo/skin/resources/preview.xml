<skin>

    <!-- Toolbar text -->
    <style type="toolBar" id="tool" extends="attached" padding="4" />
    <style type="label" id="tool" margin="0,6,0,0" />
    <style type="toolBarSeparator" id="tool" margin="0,4,0,4" />

    <!-- Preview information panel -->
    <style type="panel" id="previews">
        <component>
            <opaque>true</opaque>
            <background>white</background>
        </component>
        <painter id="painter" class="com.alee.extended.painter.common.InnerShadePainter">
            <shadeWidth>12</shadeWidth>
            <round>0</round>
        </painter>
    </style>
    <style type="panel" id="preview" padding="15,20,15,15">
        <component>
            <opaque>false</opaque>
            <background>white</background>
        </component>
        <painter class="com.alee.demo.skin.PreviewPainter">
            <undecorated>false</undecorated>
            <round>8</round>
            <shadeWidth>12</shadeWidth>
            <borderColor>white</borderColor>
            <disabledBorderColor>white</disabledBorderColor>
            <paintBackground>true</paintBackground>
            <webColoredBackground>false</webColoredBackground>
        </painter>
    </style>
    <style type="styledLabel" id="preview-title" padding="4,0,4,0">
        <component>
            <horizontalAlignment>10</horizontalAlignment>
            <verticalAlignment>1</verticalAlignment>
        </component>
    </style>
    <style type="label" id="preview-tag" extends="tag" padding="2,4,2,4">
        <component>
            <horizontalAlignment>11</horizontalAlignment>
        </component>
    </style>
    <style type="separator" id="preview">
        <painter class="com.alee.managers.style.skin.web.WebSeparatorPainter">
            <lines>
                <line>
                    <color fraction="0.0">176,182,188,5</color>
                    <color fraction="0.5">176,182,188</color>
                    <color fraction="1.0">176,182,188,5</color>
                </line>
            </lines>
        </painter>
    </style>

</skin>