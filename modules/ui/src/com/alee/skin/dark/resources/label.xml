<skin>

    <!-- com.alee.laf.label.WebLabel -->

    <!-- Label -->
    <style type="label">
        <painter>
            <decorations>
                <decoration>
                    <LabelLayout>
                        <LabelIcon constraints="icon" />
                        <LabelText constraints="text" color="245,245,245" />
                    </LabelLayout>
                </decoration>
                <decoration states="disabled">
                    <LabelLayout>
                        <LabelText color="180,180,180" />
                    </LabelLayout>
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Label containing only icon -->
    <style type="label" id="icon">
        <painter>
            <decorations overwrite="true">
                <decoration>
                    <LabelIcon constraints="icon" />
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Label with text shadow -->
    <style type="label" id="shadow">
        <painter>
            <decorations>
                <decoration>
                    <LabelLayout>
                        <LabelText shadow="true" shadowColor="black" shadowSize="2" />
                    </LabelLayout>
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Vertical text -->
    <style type="label" id="vertical-ccw">
        <painter>
            <decorations>
                <decoration>
                    <LabelLayout rotation="counterClockwise" />
                </decoration>
            </decorations>
        </painter>
    </style>
    <style type="label" id="vertical-cw">
        <painter>
            <decorations>
                <decoration>
                    <LabelLayout rotation="clockwise" />
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Label with tag decoration -->
    <style type="label" id="tag" padding="2,5,2,5">
        <painter>
            <decorations>
                <decoration>
                    <WebShape round="3" />
                    <LineBorder color="68,72,74" />
                    <ColorBackground color="77,81,83" />
                </decoration>
            </decorations>
        </painter>
    </style>

</skin>