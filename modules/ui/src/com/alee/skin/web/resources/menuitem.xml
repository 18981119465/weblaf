<skin>

    <!-- com.alee.laf.menu.WebMenuItem -->

    <!-- Menu item -->
    <style type="menuitem">
        <component>
            <opaque>false</opaque>
        </component>
        <painter>
            <decorations>
                <decoration>
                    <WebShape round="0" />
                    <MenuItemLayout padding="4,10,4,10" iconTextGap="6" textAcceleratorGap="20">
                        <ButtonIcon constraints="icon" />
                        <ButtonText constraints="text" color="black" />
                        <Background constraints="accelerator" color="240,240,240" round="4" opacity="0" />
                        <AcceleratorText constraints="accelerator" padding="2,4,2,4" color="90,90,90" />
                    </MenuItemLayout>
                </decoration>
                <decoration states="selected">
                    <GradientBackground>
                        <color>208,208,198</color>
                        <color>196,196,186</color>
                    </GradientBackground>
                    <MenuItemLayout>
                        <Background opacity="1" />
                    </MenuItemLayout>
                </decoration>
                <decoration states="disabled">
                    <MenuItemLayout>
                        <ButtonText color="120,120,120" />
                        <AcceleratorText color="120,120,120" />
                    </MenuItemLayout>
                </decoration>
            </decorations>
        </painter>
    </style>

</skin>