<skin>

    <!-- com.alee.extended.label.WebStyledLabel -->

    <!-- Styled label -->
    <style type="styledlabel">
        <painter>
            <decorations>
                <decoration>
                    <LabelLayout>
                        <LabelIcon constraints="icon" />
                        <StyledLabelText constraints="text" color="black" />
                    </LabelLayout>
                </decoration>
                <decoration states="disabled">
                    <LabelLayout>
                        <StyledLabelText color="140,140,140" ignoreStyleColors="true" />
                    </LabelLayout>
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Label containing only icon -->
    <style type="styledlabel" id="icon">
        <painter>
            <decorations overwrite="true">
                <decoration>
                    <LabelIcon constraints="icon" />
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Label with text shadow -->
    <style type="styledlabel" id="shadow">
        <painter>
            <decorations>
                <decoration>
                    <LabelLayout>
                        <StyledLabelText shadow="true" shadowColor="200,200,200" shadowSize="2" />
                    </LabelLayout>
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Vertical text -->
    <style type="styledlabel" id="vertical-ccw">
        <painter>
            <decorations>
                <decoration>
                    <LabelLayout rotation="counterClockwise" />
                </decoration>
            </decorations>
        </painter>
    </style>
    <style type="styledlabel" id="vertical-cw">
        <painter>
            <decorations>
                <decoration>
                    <LabelLayout rotation="clockwise" />
                </decoration>
            </decorations>
        </painter>
    </style>

</skin>