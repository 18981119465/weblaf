<skin>

    <!-- com.alee.laf.panel.WebPanel -->

    <!-- Panel -->
    <style type="panel">
        <component>
            <opaque>true</opaque>
            <background>237,237,237</background>
        </component>
        <painter class="WebPanelPainter">
            <undecorated>true</undecorated>
            <round>2</round>
            <shadeWidth>2</shadeWidth>
            <paintBackground>true</paintBackground>
            <webColoredBackground>true</webColoredBackground>
        </painter>
    </style>

    <!-- Transparent panel -->
    <style type="panel" id="transparent">
        <component>
            <opaque>false</opaque>
        </component>
    </style>

    <!-- Completely white panel -->
    <style type="panel" id="white">
        <component>
            <opaque>true</opaque>
            <background>white</background>
        </component>
        <painter class="WebPanelPainter">
            <paintBackground>true</paintBackground>
            <webColoredBackground>false</webColoredBackground>
        </painter>
    </style>

    <!-- Decorated panel -->
    <style type="panel" id="decorated">
        <component>
            <opaque>false</opaque>
        </component>
        <painter class="WebPanelPainter">
            <undecorated>false</undecorated>
        </painter>
    </style>

</skin>