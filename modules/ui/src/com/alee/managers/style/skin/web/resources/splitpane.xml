<skin>

    <!-- com.alee.laf.splitpane.WebSplitPane -->

    <!-- Split pane -->
    <style type="splitpane">
        <component>
            <opaque>true</opaque>
            <background>white</background>
        </component>
        <ui>
            <drawDividerBorder>true</drawDividerBorder>
        </ui>
        <painter class="WebSplitPanePainter">
            <undecorated>true</undecorated>
            <webColoredBackground>false</webColoredBackground>
        </painter>

        <!-- Split one-touch collapse buttons -->
        <style type="button" id="onetouch">
            <component>
                <focusable>false</focusable>
            </component>
            <painter class="WebButtonPainter">
                <undecorated>true</undecorated>
            </painter>
        </style>
        <style type="button" id="onetouch-left" extends="onetouch" />
        <style type="button" id="onetouch-right" extends="onetouch" />

    </style>

</skin>