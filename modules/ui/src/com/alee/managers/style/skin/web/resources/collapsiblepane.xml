<skin>

    <!-- com.alee.extended.panel.WebCollapsiblePane -->

    <!-- Collapsible pane -->
    <style type="panel" id="collapsiblepane" extends="focusable">
        <component class="com.alee.extended.panel.WebCollapsiblePane">
            <animate>true</animate>
            <rotateStateIcon>true</rotateStateIcon>
            <showStateIcon>true</showStateIcon>
            <stateIconPosition>11</stateIconPosition>
            <titlePanePosition>1</titlePanePosition>
        </component>

        <!-- Header panel -->
        <style type="panel" id="header" extends="decorated">
            <painter class="WebPanelPainter">
                <decorations>
                    <decoration>
                        <BasicShade type="outer" width="0" />
                        <GradientBackground type="linear" from="0,0" to="0,1">
                            <color>white</color>
                            <color>223,223,223</color>
                        </GradientBackground>
                    </decoration>
                    <decoration states="left">
                        <GradientBackground type="linear" to="1,0" />
                    </decoration>
                    <decoration states="right">
                        <GradientBackground type="linear" to="1,0" />
                    </decoration>
                    <decoration states="top,expanded">
                        <sides>0,0,1,0</sides>
                    </decoration>
                    <decoration states="left,expanded">
                        <sides>0,0,0,1</sides>
                    </decoration>
                    <decoration states="right,expanded">
                        <sides>0,1,0,0</sides>
                    </decoration>
                    <decoration states="bottom,expanded">
                        <sides>1,0,0,0</sides>
                    </decoration>
                    <decoration states="collapsed">
                        <sides>0,0,0,0</sides>
                    </decoration>
                </decorations>
            </painter>
        </style>

        <!-- Title label -->
        <style type="label" id="title" extends="shade" />
        <style type="label" id="title-top" extends="title" padding="2,4,2,4" />
        <style type="label" id="title-left" extends="title" padding="4,2,4,2">
            <painter class="WebLabelPainter">
                <rotation>counterClockwise</rotation>
            </painter>
        </style>
        <style type="label" id="title-bottom" extends="title" padding="2,4,2,4" />
        <style type="label" id="title-right" extends="title" padding="4,2,4,2">
            <painter class="WebLabelPainter">
                <rotation>clockwise</rotation>
            </painter>
        </style>

        <!-- Expand button -->
        <style type="button" id="expand" padding="5">
            <painter class="WebButtonPainter">
                <decorations>
                    <decoration visible="false" />
                </decorations>
            </painter>
        </style>

        <!-- Content panel -->
        <style type="panel" id="content" extends="white" />

    </style>

</skin>