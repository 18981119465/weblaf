<skin>

    <!-- com.alee.laf.list.WebList -->

    <!-- List -->
    <style type="list" padding="4">
        <component>
            <opaque>true</opaque>
            <background>white</background>
            <foreground>black</foreground>
        </component>
        <ui>
            <selectionStyle>group</selectionStyle>
            <selectOnHover>false</selectOnHover>
            <scrollToSelection>true</scrollToSelection>
        </ui>
        <painter class="WebListPainter">

            <!-- Hover cell background painter -->
            <hoverPainter class="WebListItemPainter">
                <decorations>
                    <decoration transparency="0.5" round="0">
                        <LineBorder color="170,170,170" />
                        <ColorBackground color="223,223,223" />
                    </decoration>
                </decorations>
            </hoverPainter>

            <!-- Selected cells background painter -->
            <selectionPainter class="WebListItemPainter">
                <decorations>
                    <decoration round="0">
                        <BasicShade type="inner" width="5" />
                        <ColorBackground color="223,223,223" />
                    </decoration>
                    <decoration states="disabled" transparency="0.5" />
                </decorations>
            </selectionPainter>

        </painter>

        <!-- Default cell renderer label -->
        <style type="styledlabel" id="renderer" />

        <!-- Text cell renderer label -->
        <style type="styledlabel" id="text-renderer" extends="renderer" padding="4,6,4,4" />

        <!-- Icon cell renderer label -->
        <style type="styledlabel" id="icon-renderer" extends="renderer" padding="4,4,4,4" />

        <!-- Default cell editor field -->
        <style type="textfield" id="editor" extends="nofocus" />

    </style>

</skin>