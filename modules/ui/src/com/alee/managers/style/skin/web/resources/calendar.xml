<skin>

    <!-- com.alee.extended.date.WebCalendar -->

    <!-- Calendar -->
    <style type="panel" id="calendar">
        <painter class="WebPanelPainter">
            <undecorated>false</undecorated>
            <round>2</round>
            <paintFocus>true</paintFocus>
        </painter>

        <!-- Header panel -->
        <style type="panel" id="header" extends="transparent">

            <!-- Control buttons -->
            <style type="button" id="control" extends="icon">
                <painter class="WebButtonPainter">
                    <round>2</round>
                    <paintFocus>false</paintFocus>
                    <rolloverDecoratedOnly>true</rolloverDecoratedOnly>
                </painter>
            </style>
            <style type="button" id="prev-year" extends="control" />
            <style type="button" id="prev-month" extends="control" />
            <style type="button" id="next-month" extends="control" />
            <style type="button" id="next-year" extends="control" />

            <!-- Title label -->
            <style type="label" id="title" extends="shade">
                <component>
                    <horizontalAlignment>0</horizontalAlignment>
                </component>
            </style>

        </style>

        <!-- Week titles panel -->
        <style type="panel" id="week-titles" extends="transparent" padding="2,1,3,1">
            <painter class="WebPanelPainter">
                <undecorated>false</undecorated>
                <shadeWidth>0</shadeWidth>
                <paintTop>true</paintTop>
                <paintLeft>false</paintLeft>
                <paintBottom>true</paintBottom>
                <paintRight>false</paintRight>
            </painter>

            <!-- Week title label -->
            <style type="label" id="title" extends="shade">
                <component>
                    <horizontalAlignment>0</horizontalAlignment>
                </component>
            </style>

        </style>

        <!-- Month panel -->
        <style type="panel" id="month" extends="transparent" padding="1,1,1,1">

            <!-- Month date buttons -->
            <style type="togglebutton" id="date">
                <component>
                    <horizontalAlignment>4</horizontalAlignment>
                </component>
                <painter class="WebToggleButtonPainter">
                    <round>2</round>
                    <rolloverDecoratedOnly>true</rolloverDecoratedOnly>
                </painter>
            </style>
            <style type="togglebutton" id="previous-date" extends="date" />
            <style type="togglebutton" id="current-date" extends="date" />
            <style type="togglebutton" id="next-date" extends="date" />

        </style>

    </style>

</skin>