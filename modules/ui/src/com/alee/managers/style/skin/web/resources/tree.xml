<skin>

    <!-- com.alee.laf.tree.WebTree -->

    <!-- Tree -->
    <style type="tree" padding="4">
        <ui>
            <selectionStyle>line</selectionStyle>
            <expandSelected>false</expandSelected>
            <selectOnHover>false</selectOnHover>
        </ui>
        <painter class="WebTreePainter">
            <paintLines>true</paintLines>
            <dashedLines>true</dashedLines>
            <linesColor>gray</linesColor>

            <!-- Hover node background painter -->
            <hoverPainter class="WebTreeNodePainter">
                <decorations>
                    <decoration transparency="0.5" round="0">
                        <LineBorder color="170,170,170" />
                        <ColorBackground color="223,223,223" />
                    </decoration>
                </decorations>
            </hoverPainter>

            <!-- Selected nodes background painter -->
            <selectionPainter class="WebTreeNodePainter">
                <decorations>
                    <decoration round="0">
                        <BasicShade type="inner" width="5" />
                        <ColorBackground color="223,223,223" />
                    </decoration>
                    <decoration states="disabled" transparency="0.5" />
                </decorations>
            </selectionPainter>

            <!-- Tree drop location painter -->
            <dropLocationPainter class="WebTreeDropLocationPainter">
                <decorations>
                    <decoration states="dropOn">
                        <BasicShade type="inner" width="5" />
                        <LineBorder color="85,130,190" stroke="basic;1;round;round;0;4,5" />
                    </decoration>
                    <decoration states="dropBetween" size="80,2">
                        <LineBorder color="85,130,190" stroke="basic;1;round;round;0;4,5" />
                    </decoration>
                </decorations>
            </dropLocationPainter>

            <!-- Nodes selector painter -->
            <selectorPainter class="WebTreeSelectorPainter">
                <decorations>
                    <decoration>
                        <LineBorder color="gray" stroke="basic;1;round;round;0;3,3" />
                        <ColorBackground color="0,0,255,25" />
                    </decoration>
                </decorations>
            </selectorPainter>

        </painter>

        <!-- Default tree cell renderer label -->
        <style type="label" id="renderer" padding="4,4,4,6" />

        <!-- Default tree cell renderer label -->
        <style type="styledlabel" id="renderer" padding="4,4,4,6" />

        <!-- Default tree cell editor -->
        <style type="textfield" id="editor">
            <painter class="WebTextFieldPainter">
                <hideInputPromptOnFocus>false</hideInputPromptOnFocus>
            </painter>
        </style>

    </style>

    <!-- Transparent tree -->
    <style type="tree" id="transparent">
        <component>
            <opaque>false</opaque>
        </component>
    </style>

</skin>