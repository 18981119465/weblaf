<skin>

    <!-- com.alee.laf.toolbar.WebToolBar -->

    <!-- Toolbar -->
    <style type="toolBar" padding="2">
        <component>
            <orientation>0</orientation>
            <floatable>true</floatable>
        </component>
        <painter class="WebToolBarPainter">
            <undecorated>false</undecorated>
            <round>6</round>
            <shadeWidth>2</shadeWidth>
            <paintBackground>true</paintBackground>
            <webColoredBackground>true</webColoredBackground>
            <spacing>2</spacing>
            <topBgColor>white</topBgColor>
            <bottomBgColor>229,233,238</bottomBgColor>
        </painter>
    </style>

    <!-- Attached toolbar -->
    <style type="toolBar" id="attached">
        <painter class="WebToolBarPainter">
            <shadeWidth>0</shadeWidth>
            <paintTop>false</paintTop>
            <paintLeft>false</paintLeft>
            <paintRight>false</paintRight>
        </painter>
    </style>

</skin>