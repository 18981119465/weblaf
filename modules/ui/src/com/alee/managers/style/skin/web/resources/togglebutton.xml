<skin>

    <!-- com.alee.laf.button.WebToggleButton -->

    <!-- Toggle button -->
    <style type="toggleButton">
        <component>
            <focusable>true</focusable>
            <foreground>black</foreground>
            <horizontalAlignment>0</horizontalAlignment>
            <verticalAlignment>0</verticalAlignment>
        </component>
        <painter class="WebToggleButtonPainter">
            <undecorated>false</undecorated>
            <round>3</round>
            <shadeWidth>2</shadeWidth>
            <innerShadeWidth>2</innerShadeWidth>
            <paintBackground>true</paintBackground>
            <webColoredBackground>true</webColoredBackground>
            <leftRightSpacing>4</leftRightSpacing>
        </painter>
    </style>

    <!-- Icon-only toggle button -->
    <style type="toggleButton" id="icon">
        <painter class="WebToggleButtonPainter">
            <round>2</round>
            <leftRightSpacing>0</leftRightSpacing>
        </painter>
    </style>

    <!-- Rollover-decorated-only toggle button -->
    <style type="toggleButton" id="rollover">
        <painter class="WebToggleButtonPainter">
            <rolloverDecoratedOnly>true</rolloverDecoratedOnly>
        </painter>
    </style>

    <!-- Icon-only and rollover-decorated-only toggle button -->
    <style type="toggleButton" id="icon-rollover" extends="icon">
        <painter class="WebToggleButtonPainter">
            <rolloverDecoratedOnly>true</rolloverDecoratedOnly>
        </painter>
    </style>

</skin>