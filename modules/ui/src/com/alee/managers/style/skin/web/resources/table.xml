<skin>

    <!-- com.alee.laf.table.WebTable -->

    <!-- Table -->
    <style type="table">
        <component>
            <opaque>false</opaque>
            <fillsViewportHeight>false</fillsViewportHeight>
            <background>white</background>
            <foreground>black</foreground>
            <selectionBackground>59,115,175</selectionBackground>
            <selectionForeground>white</selectionForeground>
            <rowHeight>18</rowHeight>
            <showHorizontalLines>true</showHorizontalLines>
            <showVerticalLines>true</showVerticalLines>
            <intercellSpacing>1,1</intercellSpacing>
        </component>
        <painter class="WebTablePainter">
            <scrollPaneBackgroundColor>white</scrollPaneBackgroundColor>
        </painter>

        <!-- Table header -->
        <style type="tableHeader" id="header" />

        <!-- Table corner -->
        <style type="panel" id="corner">
            <painter class="WebTableCornerPainter" />
        </style>

        <!-- Default table cell renderer label -->
        <style type="label" id="cell" padding="2,2,2,2">
            <component>
                <opaque>true</opaque>
            </component>
        </style>

        <!-- Boolean table cell renderer -->
        <style type="checkBox" id="cell-boolean">
            <component>
                <opaque>true</opaque>
                <horizontalAlignment>0</horizontalAlignment>
            </component>
            <painter class="WebCheckBoxPainter">
                <shadeWidth>0</shadeWidth>
                <animated>false</animated>
                <iconWidth>12</iconWidth>
                <iconHeight>12</iconHeight>
            </painter>
        </style>

        <!-- File table cell editor -->
        <style type="textField" id="editor" extends="undecorated" />

        <!-- Boolean table cell editor -->
        <style type="checkBox" id="editor-boolean" extends="cell-boolean">
            <component>
                <focusable>false</focusable>
            </component>
        </style>

        <!-- Date table cell editor -->
        <style type="formattedTextField" id="editor-date" extends="undecorated">
            <painter class="WebFormattedTextFieldPainter">
                <undecorated>true</undecorated>
            </painter>
        </style>

    </style>

</skin>