<skin>

    <!-- com.alee.laf.radiobutton.WebRadioButton -->

    <!-- Tristate checkbox -->
    <style type="radiobutton">
        <component>
            <opaque>false</opaque>
        </component>
        <painter class="WebRadioButtonPainter">
            <undecorated>true</undecorated>
            <leftRightSpacing>0</leftRightSpacing>
            <round>5</round>
            <shadeWidth>2</shadeWidth>
            <iconWidth>16</iconWidth>
            <iconHeight>16</iconHeight>
            <borderColor>170,170,170</borderColor>
            <darkBorderColor>128,128,128</darkBorderColor>
            <disabledBorderColor>192,192,192</disabledBorderColor>
            <topBgColor>255,255,255</topBgColor>
            <bottomBgColor>223,223,223</bottomBgColor>
            <topSelectedBgColor>242,242,242</topSelectedBgColor>
            <bottomSelectedBgColor>213,213,213</bottomSelectedBgColor>
            <animated>true</animated>
            <rolloverDarkBorderOnly>false</rolloverDarkBorderOnly>
        </painter>
    </style>

</skin>