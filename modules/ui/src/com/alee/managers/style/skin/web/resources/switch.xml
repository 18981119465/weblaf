<skin>

    <!-- com.alee.extended.button.WebSwitch -->

    <!-- Switch -->
    <style type="panel" id="switch" extends="decorated">
        <component>
            <focusable>true</focusable>
        </component>
        <painter class="WebPanelPainter">
            <round>2</round>
            <paintFocus>true</paintFocus>
        </painter>

        <!-- Switch gripper -->
        <style type="panel" id="gripper" extends="decorated">
            <painter class="WebPanelPainter">
                <round>1</round>
            </painter>
        </style>

        <!-- Switch state label -->
        <style type="label" id="option" extends="shade" padding="2,5,2,5">
            <component>
                <foreground>darkGray</foreground>
            </component>
        </style>
        <style type="label" id="selected" extends="option" />
        <style type="label" id="deselected" extends="option" />

    </style>

</skin>