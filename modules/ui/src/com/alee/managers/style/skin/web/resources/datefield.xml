<skin>

    <!-- com.alee.extended.date.WebDateField -->

    <!-- Date field -->
    <style type="datefield" id="datefield">
        <component>
            <opaque>false</opaque>
            <background>white</background>
        </component>
        <painter class="WebDateFieldPainter">
            <undecorated>false</undecorated>
            <round>2</round>
            <shadeWidth>2</shadeWidth>
            <paintFocus>true</paintFocus>
            <paintBackground>true</paintBackground>
            <webColoredBackground>false</webColoredBackground>
        </painter>

        <!-- Date text field -->
        <style type="formattedtextfield" id="field" padding="2">
            <painter class="WebFormattedTextFieldPainter">
                <undecorated>true</undecorated>
            </painter>
        </style>

        <!-- Choose button -->
        <style type="button" id="button" extends="icon">
            <component>
                <focusable>false</focusable>
            </component>
            <painter class="WebButtonPainter">
                <round>2</round>
                <shadeWidth>0</shadeWidth>
                <paintTop>false</paintTop>
                <paintRight>false</paintRight>
                <paintBottom>false</paintBottom>
                <moveIconOnPress>false</moveIconOnPress>
                <rolloverDecoratedOnly>true</rolloverDecoratedOnly>
            </painter>
        </style>

        <!-- Popup -->
        <style type="rootpane" id="popup" extends="popover">

            <!-- Calendar -->
            <style type="panel" id="calendar" extends="calendar">
                <component>
                    <opaque>false</opaque>
                </component>
                <painter class="WebPanelPainter">
                    <undecorated>true</undecorated>
                </painter>
            </style>

        </style>

    </style>

</skin>