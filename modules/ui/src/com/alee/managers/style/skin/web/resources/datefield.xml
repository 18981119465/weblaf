<skin>

    <!-- com.alee.extended.date.WebDateField -->

    <!-- Date field -->
    <style type="formattedtextfield" id="datefield">

        <!-- Choose button -->
        <style type="button" id="choose">
            <component>
                <focusable>false</focusable>
            </component>
            <painter class="WebButtonPainter">
                <round>2</round>
                <shadeWidth>0</shadeWidth>
                <moveIconOnPress>false</moveIconOnPress>
                <rolloverDecoratedOnly>true</rolloverDecoratedOnly>
            </painter>
        </style>

        <!-- Calendar -->
        <style type="panel" id="popup-calendar" extends="calendar">
            <painter class="WebPanelPainter">
                <undecorated>false</undecorated>
                <round>2</round>
                <shadeWidth>0</shadeWidth>
                <paintFocus>false</paintFocus>
            </painter>
        </style>

    </style>

</skin>